<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node JS-mySQL</title>
</head>
<body>
    <h1>Daftar Pengguna</h1>
    <!-- Cek jika ada data pengguna -->
    <% if(users.length > 0) { %>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(pengguna => { %>
            <tr>
                <td><%= pengguna.id %></td>
                <td><%= pengguna.name %></td>
                <td><%= pengguna.email %></td>
                <td><%= pengguna.phone %></td>
                <td>
                    <a href="/edit/<%= pengguna.id %>">Edit</a>
                    <a href="/delete/<%= pengguna.id %>" onclick="return confirm('Yakin ingin menghapus pengguna ini?')">Hapus</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
        <p>Tidak ada pengguna yang terdaftar.</p>
    <% } %>
    
    <h2>Tambah Pengguna Baru</h2>
    <!-- Form untuk menambah pengguna baru -->
    <form action="/add" method="post">
        <label for="name">Nama:</label>
        <input type="text" id="name" name="name" required><br>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br>
        
        <label for="phone">Telepon:</label>
        <input type="text" id="phone" name="phone" required><br>
        
        <button type="submit">Tambah Pengguna</button>
    </form>
</body>
</html>
